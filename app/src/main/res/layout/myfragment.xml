<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="我的"
       android:gravity="center"
       android:textSize="45pt"
       android:textColor="@color/white"
       android:background="@color/colorRedPrimaryDark"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100pt"
    android:background="@drawable/my_bg_colorful">
   <ImageView
       android:id="@+id/img_setting"
       style="@style/lmatch_hwrap_style"
       android:layout_marginLeft="750pt"
       android:layout_marginTop="40pt"
       android:background="@mipmap/my_set" />
</LinearLayout>
   <ListView
       android:id="@+id/my_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"></ListView>
</LinearLayout>
