<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <TextView
       android:layout_marginTop="25pt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="我的"
       android:gravity="center"
       android:textSize="45pt"
       android:textColor="@color/white"
       android:background="#006633"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200pt"
    android:background="@drawable/my_bg_colorful">
   <ImageView
       android:id="@+id/img_setting"
       style="@style/lmatch_hwrap_style"
       android:layout_marginLeft="750pt"
       android:layout_marginTop="40pt"
       android:background="@mipmap/my_set" />
</LinearLayout>

   <RelativeLayout
       android:id="@+id/rl_record"
       style="@style/mine_lin_style"
       android:gravity="center_vertical">


      <TextView
          android:id="@+id/tv_history"
          style="@style/common_tv_style"
          android:layout_centerVertical="true"
          android:text="历史" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10pt"
          android:background="@mipmap/right" />
   </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

     <!-- <com.jude.easyrecyclerview.EasyRecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginLeft="@dimen/mine_list_view_margin_left"
          android:layout_marginRight="@dimen/mine_list_view_margin_left"
          app:scrollbars="none"
          android:visibility="gone"/>-->
   </LinearLayout>

   <RelativeLayout
       android:id="@+id/rl_down"
       style="@style/mine_lin_style"
       android:gravity="center_vertical">


      <TextView
          android:id="@+id/tv_down"
          style="@style/common_tv_style"
          android:layout_centerVertical="true"
          android:text="缓存" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10pt"
          android:background="@mipmap/right" />
   </RelativeLayout>


   <RelativeLayout
       android:id="@+id/rl_collection"
       style="@style/mine_lin_style"
       android:gravity="center_vertical">

      <TextView
          android:id="@+id/tv_collection"
          style="@style/common_tv_style"
          android:layout_centerVertical="true"
          android:text="收藏" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10pt"
          android:background="@mipmap/right" />
   </RelativeLayout>


   <RelativeLayout
       android:id="@+id/rl_them"
       style="@style/mine_lin_style"
       android:gravity="center_vertical">

      <TextView
          android:id="@+id/tv_them"
          style="@style/common_tv_style"
          android:layout_centerVertical="true"
          android:text="主题" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10pt"
          android:background="@mipmap/right" />
   </RelativeLayout>
</LinearLayout>
