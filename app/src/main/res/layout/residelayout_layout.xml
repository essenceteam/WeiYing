<?xml version="1.0" encoding="utf-8"?>
<com.example.liufan.weiyingapplication.Lateralspreads.ResideLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/resideLayout"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66CC00">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/resideHeadImg"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_marginLeft="25pt"
            android:layout_marginTop="55pt"
            android:scaleType="fitXY"
            android:src="@mipmap/photo" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resideHeadImg"
            android:layout_marginLeft="25pt"
            android:layout_marginRight="80pt"
            android:layout_marginTop="5pt"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10pt"
            android:text="微影，微一下"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <RelativeLayout
            android:id="@+id/le"
            android:layout_width="match_parent"
            android:layout_height="860pt"
            android:layout_below="@id/desc">
        <ListView
            android:id="@+id/resideListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25pt"></ListView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/le"
            >
            <include layout="@layout/resideitemlayout"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <include layout="@layout/activity_main"></include>

    </RelativeLayout>

</com.example.liufan.weiyingapplication.Lateralspreads.ResideLayout>
